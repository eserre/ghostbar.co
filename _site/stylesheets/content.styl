article
  .content
    pre
      display inline-block
      overflow auto
      padding 0.33em

    code,pre
      background $code-bg
      font-family 'Inconsolata', monospace

#first-post .container, #featured-posts .container, #post .container
  padding-top 0.66em
  padding-bottom 0.33em
  background rgb(255,255,255)
  background rgba(255,255,255,0.5)
  border-radius 0.33em
  margin-bottom 1.33em

#first-post,#featured-posts
  .date
    font-size 0.6em
    text-transform uppercase

#first-post
  h1
    font-size 1.66em

#featured-posts
  h1
    font-size 1.33em

article.post
  h1
    font-size 1.66em
    text-align center
  .date
    text-transform uppercase
    font-size 0.8em
    text-align center

#next-10-posts
  span.date
    font-family 'Titillium Web', sans-serif
    font-style normal
    font-weight 400
    font-size 0.7em
    background #fff
    background rgba(255,255,255,0.5)
    border-radius 0.33em
    padding 0.1em 0.33em
